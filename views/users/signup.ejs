<% layout("/layout/boilerplate") %>
<style>
    @media screen and (max-width: 600px) {
        form {
            width: 90% !important;
        }
        
    }
</style>
<body>
    <h1 style="text-align: center; margin-top: 40px;"><img src="/assets/trekLogo.png" alt="" style="width: 150px;"><br>Welcome :)</h1>
    <div class="container">
    <form action="/signup" method="post" class="row g-3 needs-validation" novalidate>
        <div class="col-md-4 col-lg-10">
            <label for="un" class="form-label">Username</label>
            <input type="text" class="form-control" id="un" placeholder="your name" name="username" required>
            <div class="valid-feedback">
            Looks good!
            </div>
        </div>
        <div class="col-md-4 col-lg-10">
            <label for="em" class="form-label">Email</label>
            
            <input type="text" class="form-control" id="em" placeholder="your email" name="email" required>
            <div class="invalid-feedback">
                Please choose a username.
            </div>
        </div>

        <div class="col-md-6 col-lg-10">
            <label for="pass" class="form-label">Password</label>
            <input type="password" class="form-control" id="pass" placeholder="your password" name="password" required>
            <div class="invalid-feedback">
            Please enter a valid password.
            </div>
                <span>already Registered? <a href="/login" style="color: rgb(0, 146, 0) !important; font-weight: 600;">Login Here!</a></span>
        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit" >Sign Up</button>
        </div>
    </form>
</div>
</body>
