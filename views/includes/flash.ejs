<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin: 20px; margin-bottom: 0;">
        <%= success %>
        <button
            style="all: unset; margin-left: 10px;" 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close"
        >
            <span aria-hidden="true">&times;</span>
        </button>
   </div>
<% } %>

